				}
			}
			blockoverride "setvisible" {
				block "setvisible_low" {}
			}
			blockoverride "setvisible_2" {
				block "setvisible_low_2" {}
			}

		}
		### MEDIUM
		set_level_bar_construction_item = {
            blockoverride "context" {
